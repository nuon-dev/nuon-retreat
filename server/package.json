{
  "name": "nuon-server",
  "version": "0.0.1",
  "description": "nuon-server",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "dev": "export NODE_ENV=development;nodemon src/index.ts",
    "start": "ts-node src/index.ts",
    "stop": "pkill -f nodemon",
    "migration:run": "ts-node src/run-migration.ts",
    "migration:revert": "ts-node -e \"require('./src/run-migration.ts').revertMigration()\"",
    "migration:check": "node scripts/check-migrations.js",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "set -a && source .env 2>/dev/null && set +a && ./scripts/restore-db.sh",
    "deploy:safe": "bash -c 'MIGRATION_STATUS=$(npm run migration:check --silent) && if [ \"$MIGRATION_STATUS\" = \"pending\" ]; then echo \"ðŸ”„ Pending migrations detected, creating backup...\"; npm run db:backup; echo \"ðŸ”„ Running migrations...\"; npm run migration:run; echo \"âœ… Migrations completed\"; else echo \"âœ… No pending migrations, skipping backup and migration\"; fi'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "2.2.0",
    "cors": "^2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "lodash": "^4.17.21",
    "multer": "2.0.1",
    "mysql2": "3.14.1",
    "nodemon": "3.1.10",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.24"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/express": "5.0.3",
    "@types/multer": "1.4.13",
    "@types/lodash": "^4.17.19",
    "@types/node": "22.15.30"
  }
}
